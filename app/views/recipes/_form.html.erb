<%= form_with(model: recipe) do |form| %>
  <% if recipe.errors.any? %>
    <div>
      <h2><%= pluralize(recipe.errors.count, "error") %> this recipe can not be saved:</h2>

      <ul>
        <% recipe.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<div class="flex justify-center mt-40 mb-30 container mx-auto">
  <div class="w-3/5 bg-white shadow-lg pb-10 px-10 pt-5">
    <%=form.text_field :name, class: 'py-2 px-4 border w-full focus:outline-orange-400', placeholder: 'Recipe name' %><br />
    <%=form.text_area :description, class: 'py-2 px-4 border w-full focus:outline-orange-400', placeholder: 'Recipe description' %><br />
    <%=form.number_field :preparation_time, class: 'py-2 px-4 border w-full focus:outline-cyan-400', placeholder:'Prepration time',value: "%H:%M",min: 'hh:mm:ss',max: 'hh:mm:ss'%><br />
    <%=form.number_field :cooking_time, class: 'py-2 px-4 border w-full focus:outline-orange-400', placeholder:'Cooking time',value: "%H:%M",min: 'hh:mm:ss',max: 'hh:mm:ss'%><br />
    <h3>Public</h3>
    <div>
    <%= form.radio_button :public, "true" %>
    <%= form.label :public, "true" %>

    <%= form.radio_button :public, "false" %>
    <%= form.label :public, "false" %>
    </div>
    <%= form.submit 'Create', class: 'bg-orange-500 py-3 px-6 text-white cursor-pointer hover:bg-orange-700'%>
  </div>
  </div>
<% end %>