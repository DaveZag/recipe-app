<div class="flex justify-center mt-40 mb-30 container mx-auto">
  <div class="w-3/5 bg-white shadow-lg pb-10 px-10 pt-5">
        <h1>Create new Inventory</h1>
        <%= form_with model: @inventory, url: inventories_path, local: true do |form| %>
            <%=form.text_field :name, class: 'py-2 px-4 border w-full focus:outline-orange-400 mb-4 mt-2.5', placeholder: 'Inventory name' %><br />
            
            <%= form.submit 'Create', class: 'btn' %>
        <% end %>
    </div>
</div>