<%= form_with model: @recipe_foods, url: recipe_recipe_foods_path do |form| %>
  <p>
    <%= form.label :quantity, class: "foodFormLabel" %> <br>
    <%= form.number_field :quantity %>
  </p>

  <p>
    <%= form.label :food_id, class: "foodFormLabel"%> <br>
    <%= collection_select(:recipe_food, :food_id, @user.foods.order(name: :asc), :id, :name) %>
  </p>

  <div>
    <%= form.submit 'Update', class: "foodFormSubmit" %>
  </div>
<% end %>