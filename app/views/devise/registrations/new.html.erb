
<div class="flex justify-center mt-48 mb-48 container mx-auto">
  <div class="w-3/5 flex flex-col gap-4 bg-white shadow-lg pb-10 px-10 pt-5">
    <h2>Sign up</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'py-2 px-4 border w-full focus:outline-orange-400' %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" , class: 'py-2 px-4 border w-full focus:outline-orange-400'%>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'py-2 px-4 border w-full focus:outline-orange-400' %>
      </div>

      <div class="actions mt-3">
        <%= f.submit "Sign up", class: 'btn bg-teal-300' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
