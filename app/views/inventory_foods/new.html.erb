<div class="flex justify-center mt-48 mb-48 container mx-auto">
  <div class="w-3/5 bg-white shadow-lg pb-10 px-10 pt-5">
    <h1 class="create-title text-center">Add A New Inventory Food</h1>
        <%= form_with  url: inventory_inventory_foods_path(inventory_id: params[:inventory_id]), method: :post, local: true, scope: :@inventory_food do |f| %>
            <div class="form-group">
                <div class="form-outline mb-4">
                    <%= f.label :quantity, class: "form-label" %><br />
                    <%= f.text_field :quantity, class: 'py-2 px-4 mt-3 border w-full focus:outline-orange-400' %>
                </div>
                <div class="form-outline mb-4">
                    <%= f.label :inventory_id, class: "form-label" %><br />
                    <%= f.collection_select(:inventory_id, Inventory.all, :id, :name, class: "form-control form-control-lg" ) %>
                </div>
                <div class="form-outline mb-4">
                    <%= f.label :food_id, class: "form-label" %><br />
                    <%= f.select(:food_id, Food.all.map{|u| [u.name, u.id]}, class: "form-control form-control-lg" ) %>
                </div>

                <div class="submit-btn">
                    <%= f.submit 'Save' ,class: "btn btn-primary btn-lg btn-block"  %>
                </div>
            </div>
        <% end %>
    </div>
</div>