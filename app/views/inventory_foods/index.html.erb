<div class="food-view">
<div class="d-flex justify-content-end me-5 p-2">
<%= link_to 'Add Food', new_inventory_inventory_food_path( @inventory.id), class: "btn btn-dark p-3" %>
</div>
<hr>
<table class=" table table-striped table-bordered table-hover text-center" style="width: 80%; margin-top: 3re; margin-inline:auto">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Food</th>
      <th scope="col">Quantity</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    <% InventoryFood.all.each do |infood| %>
        <tr>
            <th scope="row"><%= infood.id %></th>
            <td><%= infood.food.name %></td>
            <td><%= infood.quantity %></td>
            <td>
            
            <%= button_to "Delete", inventory_inventory_food_path(@inventory, infood), data: {turbo: false}, method: :delete, class: "btn bg-red-300" %>
            
            </td>
        </tr>
    <% end %>
  </tbody>
</table>
</div>